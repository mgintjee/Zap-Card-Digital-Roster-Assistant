<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.happybananastudio.zapcarddigitalrosterassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/appName"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivitySelectTeam"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityModifyRoster"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityHelp"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityModifyFormation"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityModifyLineup"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityModifyAttendance"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityAvailablePlayers"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityDisplayLineup"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ActivityModifyPlayer"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>