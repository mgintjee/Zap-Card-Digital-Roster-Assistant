                <Button
                    android:id="@+id/b24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/field_player"
                    android:text="@string/textEmpty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/field_shelf3"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/b30"
