                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/Formation_spinnerPlayer22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/field_empty"
                    android:scaleType="fitXY"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/Formation_spinnerPlayer23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/field_empty"
                    android:scaleType="fitXY"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/Formation_spinnerPlayer24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/field_empty"
                    android:scaleType="fitXY"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/field_shelf3"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/Formation_spinnerPlayer30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/field_empty"
                    android:scaleType="fitXY"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/Formation_spinnerPlayer31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/field_empty"
                    android:scaleType="fitXY"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/Formation_spinnerPlayer32"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/field_empty"
                    android:scaleType="fitXY"
                    android:spinnerMode="dialog"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/Formation_spinnerPlayer33"
                    android:layout_width="match_parent"
