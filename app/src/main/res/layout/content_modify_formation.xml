            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/field_shelf2"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/Formation_spinnerPlayer20"
                    android:layout_width="match_parent"
